<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eva.mapper.BlogMapper">

    <select id="selectBlogByID" resultType="com.eva.dto.Blog">
        select * from blog where id=#{id}
    </select>

    <select id="selectBlogByTag" resultType="com.eva.dto.Blog">
        select * from blog where tag_id =#{tag_id}
    </select>

    <select id="selectBlogByType" resultType="com.eva.dto.Blog">
        select * from blog where type_id =#{type_id}
    </select>
    <select id="selectBlogByTag1" resultType="com.eva.dto.Blog">

    </select>
    <select id="selectBlogs" resultType="com.eva.vo.BlogsVo">
        select * from blog  b
        left join type t1
        on b.type_id=t1.id
        left join tag_blog_relation t2
        on b.id=t2.blog_id
        left join tag t3
        on t2.tag_id=t3.id
    </select>


</mapper>