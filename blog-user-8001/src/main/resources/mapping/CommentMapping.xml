<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eva.mapper.CommentMapper">
  <resultMap id="BaseCommentMap" type="com.eva.dto.Comment">
    <id column="comment_id" jdbcType="INTEGER" property="commentId" />
    <result column="blog_id" jdbcType="INTEGER" property="blogId" />
    <result column="nickname" jdbcType="VARCHAR" property="nickname" />
    <result column="parentComment_id" jdbcType="INTEGER" property="parentcommentId" />
    <result column="email" jdbcType="VARCHAR" property="email" />
    <result column="content" jdbcType="VARCHAR" property="content" />
    <result column="avatar" jdbcType="VARCHAR" property="avatar" />
    <result column="createTime" jdbcType="TIMESTAMP" property="createtime" />
  </resultMap>

  <resultMap id="CommentVo" extends="BaseCommentMap" type="com.eva.vo.CommentVo">
    <collection property="commentVoList" javaType="list" resultMap="BaseCommentMap"></collection>
  </resultMap>
  <resultMap id="CommentsVo" extends="CommentVo" type="com.eva.vo.CommentVo">
    <collection property="commentVoList" javaType="list" resultMap="CommentVo"></collection>
  </resultMap>
  <sql id="Base_Column_List">
    comment_id, blog_id, nickname, parentComment_id, email, content, avatar, createTime
  </sql>
  <select id="selectCommentVo" resultMap="CommentsVo">
    select c1.comment_id, c1.blog_id, c1.nickname, c1.parentComment_id, c1.email, c1.content, c1.avatar, c1.createTime,
    c2.comment_id, c2.blog_id, c2.nickname, c2.parentComment_id, c2.email, c2.content, c2.avatar, c2.createTime
    from comment c1
    left join comment c2
    on c1.comment_id=c2.parentComment_id
    where c1.blog_id =#{blog_id}
  </select>

</mapper>